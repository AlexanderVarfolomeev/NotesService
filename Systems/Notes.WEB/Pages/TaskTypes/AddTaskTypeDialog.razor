@using Notes.WEB.Pages.TaskTypes.Services
@using Microsoft.AspNetCore.Components
@using MudBlazor.Utilities
@using Notes.WEB.Pages.TaskTypes.Models
@inherits MudComponentBase

@inject ITaskTypeService TaskTypesService

<MudDialog>
    <DialogContent>
        <MudForm Model="model" @ref="form">
            <MudGrid>
                <MudItem xs="12" sm="6">
                    <MudTextField Label="Name" @bind-Value="model.Name"
                                  For="@(() => model.Name)"
                                  Required="true"
                                  RequiredError="Name is required!">
                    </MudTextField>
                </MudItem>
                <MudItem xs="12" sm="6">
                    <MudColorPicker PickerVariant="PickerVariant.Static"  ColorPickerView="ColorPickerView.Palette" Palette="CustomPalette" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    public IEnumerable<MudColor> CustomPalette { get; set; } = new MudColor[]
    {
        "#FF0000", "#00FF00"
    };

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    MudForm form = default!;

    [Parameter]
    public AddTaskType model { get; set; } = new();


    protected override async Task OnInitializedAsync()
    {

        model.Name = "Enter name";

    }

    async Task Submit()
    {

        await form.Validate();
        if (form.IsValid)
        {
            MudDialog.Close(DialogResult.Ok(true));
        }
    }

    void Cancel() => MudDialog.Cancel();
}
