@using Notes.WEB.Pages.TaskTypes.Services
@using Microsoft.AspNetCore.Components
@using MudBlazor.Utilities
@using Notes.WEB.Pages.TaskTypes.Models
@inherits MudComponentBase

@inject ITaskTypeService TaskTypesService

<MudDialog>
    <DialogContent>
        <MudForm Model="model" @ref="form">
            <MudGrid>
                <MudItem xs="3" sm="6">
                    <MudTextField Label="Name" @bind-Value="model.Name"
                                  For="@(() => model.Name)"
                                  Required="true"
                                  RequiredError="Name is required!">
                    </MudTextField>
                </MudItem>
                <MudItem xs="3" sm="6">
                    <MudColorPicker PickerVariant="PickerVariant.Static" ColorPickerView="ColorPickerView.Palette" Palette="CustomPalette" @bind-Text="SelectedColor" />
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="MudBlazor.Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    public IEnumerable<MudColor> CustomPalette { get; set; } = new MudColor[]
    {
        "#FF0000", "#00FF00", "#FF69B4", "#FFFF00", "#00FFFF"
    };

    [CascadingParameter]
    MudDialogInstance MudDialog { get; set; } = default!;

    MudForm form = default!;

    [Parameter]
    public int TaskTypeId { get; set; }

    [Parameter]
    public UpdateTaskType model{ get; set; } = new();

    public string SelectedColor { get; set; }

    protected override async Task OnInitializedAsync()
    {
        var type = await TaskTypesService.GetTaskById(TaskTypeId);
        model.Name = type.Name;
        model.TypeColorId = type.TypeColorId;
        SelectedColor = ColorHelper.ColorToString(type.Id);
    }

    async Task Submit()
    {
        model.TypeColorId = ColorHelper.ToInt(SelectedColor);
        await form.Validate();
        if (form.IsValid)
        {
            MudDialog.Close(DialogResult.Ok(true));
        }
    }

    void Cancel() => MudDialog.Cancel();
}
