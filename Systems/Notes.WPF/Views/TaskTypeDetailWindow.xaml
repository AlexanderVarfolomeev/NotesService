<Window x:Class="Notes.WPF.Views.TaskTypeDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Notes.WPF.Views"
        xmlns:viewModel ="clr-namespace:Notes.WPF.ViewModels"
        xmlns:taskTypes="clr-namespace:Notes.WPF.Models.TaskTypes"
        mc:Ignorable="d"
        xmlns:cmd="clr-namespace:Notes.WPF.Infrastructure.Commands"
        Title="Task type detail" Height="100" Width="300" DataContext="{Binding RelativeSource={RelativeSource Self}}">
    <!--<Window.DataContext>
        <DataContext="{Binding RelativeSource={RelativeSource Self}}"></DataContext>
    </Window.DataContext>-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox Grid.Column="0" Grid.Row="0" Text="Имя задачи"/>
        <TextBox Grid.Column="0" Grid.Row="1" Text="Цвет"/>
        <TextBox Grid.Column="1" Grid.Row="0" Text="{Binding TypeName}"/>
        <ComboBox Grid.Column="1" Grid.Row="1" ItemsSource="{Binding Colors}" SelectedItem="{Binding Color}">
            <!--<ComboBox.DataContext>
                <viewModel:TaskTypeDetailViewModel/>
            </ComboBox.DataContext>-->
            <ComboBox.Resources>
                <DataTemplate DataType="{x:Type taskTypes:TypeColor}">
                    <TextBox Text="{Binding Name}"></TextBox>
                </DataTemplate>
            </ComboBox.Resources>
        </ComboBox>
        <Button Grid.Column="0" Grid.Row="2" Content="Ok" IsDefault="True" 
                CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=local:TaskTypeDetailWindow}}">
            <Button.Command>
                <cmd:CloseDialogCommand DialogResult="True"/>
            </Button.Command>
        </Button>
    </Grid>
</Window>
