                                        <Style TargetType="ListBoxItem">
                                            <Setter Property="HorizontalAlignment" Value="Stretch"/>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ContextMenu>
                                        <ContextMenu>
                                            <MenuItem Header="Выполнить" Command="{Binding DoTaskCommand, Source={StaticResource Container}}"
